generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clientes {
  id         String      @id @default(uuid())
  nome       String
  sobreNome  String
  email      String      @unique
  cel        String
  observacao String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  aparelhos  Aparelhos[]
}

model Aparelhos {
  id         String    @id @default(uuid())
  marca      String
  modelo     String
  memoria    String
  hd         Int
  placaMae   Int
  carregador Boolean
  bateria    Boolean
  clientesId String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  clientes   Clientes? @relation(fields: [clientesId], references: [id])
  ordens     Ordens[]
}

model Ordens {
  id          String     @id @default(uuid())
  conclusao   String
  aparelhosId String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  aparelhos   Aparelhos? @relation(fields: [aparelhosId], references: [id])
}

model Servicos {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
